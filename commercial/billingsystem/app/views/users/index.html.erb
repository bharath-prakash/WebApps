<h1>Listing users</h1>

<table>
  <tr>
    <th>Login name</th>
    <th>Password</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Address</th>
    <th>Contact no</th>
    <th>Role</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login_name %></td>
    <td><%= user.password %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.address %></td>
    <td><%= user.contact_no %></td>
    <td><%= user.role %></td>
    <td><%= user.created_by %></td>
    <td><%= user.updated_by %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

